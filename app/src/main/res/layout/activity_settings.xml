<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.SettingsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_dark_mode"
            ></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:text="Modo oscuro"
                android:layout_width="wrap_content"
                android:textColor="@color/settings_text_tittle"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="Activa el modo oscuro para un cambio visual"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">

        </com.google.android.material.switchmaterial.SwitchMaterial>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_bluetooth"
            ></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:text="Activar Bluethoot"
                android:layout_width="wrap_content"
                android:textColor="@color/settings_text_tittle"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:text="Conecta dispoitivos sin cables"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchBluethoot"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">

        </com.google.android.material.switchmaterial.SwitchMaterial>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:layout_height="1dp">

    </com.google.android.material.divider.MaterialDivider>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume"
            ></ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:text="Subir Volumen"
                android:layout_width="wrap_content"
                android:textColor="@color/settings_text_tittle"
                android:layout_height="wrap_content">
            </TextView>

            <com.google.android.material.slider.RangeSlider
                android:id="@+id/rsVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stepSize="1"
                android:valueFrom="0"
                android:valueTo="100">

            </com.google.android.material.slider.RangeSlider>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_vibration"
            ></ImageView>

            <TextView
                android:text="Modo vibraciÃ³n en llamadas"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/settings_text_tittle"
                android:layout_height="wrap_content">
            </TextView>



        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchVibration"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_height="wrap_content">

        </com.google.android.material.switchmaterial.SwitchMaterial>

    </LinearLayout>
    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:layout_height="1dp">

    </com.google.android.material.divider.MaterialDivider>

</LinearLayout>